<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoveRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/love_rating_bar</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#C51111</item>
    </style>

    <style name="HopsRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/hops_rating_bar</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#C51111</item>
    </style>

    <style name="AlcoholRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/alcohol_rating_bar</item>
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">#FDA016</item>
    </style>

</resources>
